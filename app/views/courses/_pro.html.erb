<div class="col-md-10 center-block upcoming-programs-form padding-bottom-top">
  <h1 style="text-align: center;">New Course</h1>
  <%= form_for @course do |f| %>
    <% if @course.errors.any?%>
      <h2><%= pluralize(@course.errors.count, "error") %> prevented this client from saving:</h2>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
      </ul>
    <%end%>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, {class: 'form-control form-input'} %>
    </div>

    <div class="form-group">
      <%= f.label :type_of_program %>
      <%= f.text_field :type_of_program, {class: 'form-control form-input'} %>
    </div>

    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, {class: 'form-control form-input'} %>
    </div>

    <div class="form-group">
      <%= f.label :tuition %>
      <%= f.text_field :tuition, {class: 'form-control form-input'} %>
    </div>

    <button type="submit" class="btn sendbtn">Submit</button>

  <%end%>
</div>
